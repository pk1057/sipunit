<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
    http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>
<!--   <baseDirectory>sipunit</baseDirectory> -->

  <fileSets>
    <fileSet>
      <directory>docs/license</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>sipunit_license.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>docs/license</directory>
      <outputDirectory>docs/license</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/site/apidocs</directory>
      <outputDirectory>docs/api</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>sipunit-${project.version}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/test</directory>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/test-classes</directory>
      <outputDirectory>examples/java</outputDirectory>
      <includes>
        <include>org/**</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>